@model List<QuizCategory>

@using IkusTrafikskola.Core.ViewModels

<div class="container py-4 py-md-5 py-lg-6">
    <div class="row">

        <div class="col-12 mb-4">
            <button type="button" class="btn btn-danger btn-sm signOutButton"> Odjavite se</button>
        </div>

        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4 mx-auto text-center">

            <h3 class="mb-5">Izaberite kategoriju testa :</h3>

            <div id="main-quiz-container">
                <div class="row justify-content-center">
                    <div class="col-8 col-sm-6">
                        @foreach (var item in Model)
                        {
                            var link = item.CategoryLink;
                            var name = item.CategoryName;

                            <a href="@link" class="btn btn-primary btn-sm w-100 mb-3">@name</a>
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>