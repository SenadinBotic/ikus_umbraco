@inherits Umbraco.Web.Mvc.UmbracoViewPage<Umbraco.Web.PublishedModels.Content>
@{
    Layout = "Master.cshtml";

    var pageContent = Model.Value("pageContent");
    var youtubeLink = Model.Value("videoLink");
}

@Html.Partial("~/Views/Partials/contentIntro.cshtml")

<div class="container py-4 py-md-5 py-lg-6">
    <div class="row">
        <div class="col-12">
            <div class="content">

                @pageContent

                @if (youtubeLink != null)
                {
                    <div class="ratio ratio-16x9 mt-5 mt-md-6">
                        <iframe class="embed-responsive-item"
                                src="@youtubeLink"
                                allowfullscreen></iframe>
                    </div>
                }
            </div>
        </div>
    </div>
</div>